<div class="post-title">
  <h1>{{post.title}}</h1>
</div>

  <div class="post-details">
    <ul>
      <li>{{post.author}}</li>
      <li>{{post.date}}</li>
    </ul>
  </div>
  <div class="post-body">
    <img src={{post.image}} alt={{post.title}} />
    <p>{{post.content}}</p>
  </div>

  <div class="commentSection">
    <ul>
      {{#each post.comments as |comment|}}
        {{comment-tile comment=comment update="update" delete="delete"}}
      {{/each}}
    </ul>
  </div>

  {{new-comment post=post save="save"}}
