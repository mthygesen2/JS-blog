<li>
  <div class="post-title">
    {{post.title}}
  </div>
  <div class="post-details">
    <ul>
      <li>{{post.author}}</li>
      <li>{{post.date}}</li>
    </ul>
  </div>
  <div class="post-body">
    <img src={{post.image}} alt={{post.title}} />
    {{post.content}}
  </div>

  <div class="commentSection">
    <ul>
      {{#each post.comments as |comment|}}
        {{comment-tile comment=comment update="update"}}
      {{/each}}
    </ul>
  </div>

  {{new-comment post=post save="save"}}
</li>
