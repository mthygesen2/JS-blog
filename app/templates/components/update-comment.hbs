{{#if updateCommentForm}}
  <h1>Update Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="userName">User Name</label>
        {{input value=userName id="userName"}}
      </div>

      <div class="form-group">
        <label for="comment">Comment</label>
        {{input value=commentContent id="comment"}}
      </div>
      <button {{action 'update' comment}}>Update</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateCommentForm'}}>Update your Comment</button>
{{/if}}
